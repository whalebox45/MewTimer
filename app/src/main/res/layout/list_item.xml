<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTimerName"
        android:layout_width="95dp"
        android:layout_height="19dp"
        android:fontFamily="sans-serif"
        android:text="Product Name"
        android:textAlignment="textEnd"
        android:typeface="sans"
        app:layout_constraintTop_toTopOf="@+id/tvRemainTime"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnReset"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvRemainTime"
        android:layout_width="200dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="00:00:00"
        android:textAlignment="textStart"
        android:textSize="50sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPlayPause"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play"
        app:layout_constraintLeft_toRightOf="@+id/tvRemainTime"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvRemainTime"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_reset"
        app:layout_constraintLeft_toRightOf="@+id/btnPlayPause"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlayPause"
        android:layout_marginBottom="0dp" />

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_edit"
        app:layout_constraintLeft_toRightOf="@+id/btnReset"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnReset"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTimerName"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>